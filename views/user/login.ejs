<section>
  <div>
    <div>
      <%if (messages.error) { %> <%= messages.error%> <%}%>
      <form
        method="POST"
        action="/login"
        class="max-w-sm rounded overflow-hidden flex justify-center items-center shadow-lg"
      >
        <div>
          <img
            class="w-full"
            src="https://img.freepik.com/free-vector/mobile-login-concept-illustration_114360-135.jpg?w=2000"
            alt="Sunset in the mountains"
          />
          <div class="px-6 py-4">
            <label for="email">Email</label>
            <br />
            <input
              class="btn btn-primary inline-block text-sm px-4 py-2 leading-none border rounded text-teal-500 border-teal-500 hover:border-teal-500 hover:text-teal-500 hover:bg-white mt-4 lg:mt-0"
              type="email"
              id="email"
              name="email"
              required
            />
            <br />
            <label for="password">Password</label>
            <br />
            <input
              class="btn btn-primary inline-block text-sm px-4 py-2 leading-none border rounded text-teal-500 border-teal-500 hover:border-teal-500 hover:text-teal-500 hover:bg-white mt-4 lg:mt-0"
              type="password"
              id="password"
              name="password"
              required
            />
            <br />
            <button
              style="margin: 20px"
              class="btn btn-primary inline-block text-sm px-4 py-2 leading-none border rounded text-teal-500 border-teal-500 hover:border-teal-500 hover:text-teal-500 hover:bg-white mt-4 lg:mt-0"
              action="submit"
            >
              Login
            </button>
            <p>
              Don't have an account?
              <a
                href="/Register"
                class="inline-block text-sm px-4 py-2 leading-none border rounded text-teal-500 border-teal-500 hover:border-teal-500 hover:text-teal-500 hover:bg-white mt-4 lg:mt-0"
                >Register</a
              >
            </p>
          </div>
        </div>
      </form>
    </div>
  </div>
</section>
